<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tiles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector"
    android:clickable="true"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

	    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/lin"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/default_profile_pic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    android:id="@+id/customer_name"
                    style="@style/text_view_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="AnasAbubacker" >
                </TextView>

                <TextView
                    android:id="@+id/amount"
                    style="@style/text_view_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="$200.1" >
                </TextView>
            </LinearLayout>

            <TextView
                style="@style/blue_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items" >
            </TextView>

            <LinearLayout
                android:id="@+id/itemsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_tile_background_color"
                android:orientation="vertical"
                android:weightSum="1.0" >
            </LinearLayout>
        </LinearLayout>
        
            <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_tick_mark"
       		android:layout_alignParentRight="true"
       		android:layout_margin="2dp"
        	android:id="@+id/tick_image"
        	android:visibility="gone"
            android:layout_alignTop="@+id/lin" />
    </RelativeLayout>

</FrameLayout>