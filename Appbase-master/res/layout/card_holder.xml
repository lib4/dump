<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
  <TextView
        android:id="@+id/group_name"
        style="@style/SubTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deals" />

    <TextView
        android:id="@+id/subgroup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subgroup name" />
 <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_tile_background_color" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/title_pricelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/card_title"
                style="@style/SubTitleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text="TITLE" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card_title"
                android:layout_weight=".3"
                android:text="$100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_pricelayout"
            android:layout_toRightOf="@id/image"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/right_arrow"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_title"
                
                android:layout_weight=".3"
                android:text="DESCRIPTION" />

           
        </LinearLayout>
        
         <TextView
                android:id="@+id/right_arrow"
                style="@style/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              	android:layout_centerVertical="true"
              	android:layout_alignParentRight="true"
                android:gravity="right"
                android:text=">" 
                />
    </RelativeLayout>
</LinearLayout>